@model IList<DigitalRetailers.Models.Laptop>
@{
    ViewData["Title"] = "Index";
}


<div class=" py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="@item.laptopImageLink" />
                        <div class="card-body">
                            <ul>
                                <li>@item.laptopName</li>
                                <li>Price : Rs @item.laptopPrice.</li>
                            </ul>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-controller="Admin" asp-route-id="@item.laptopId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a class="btn btn-sm btn-outline-secondary" asp-route-id="@item.laptopId" asp-controller="Admin" asp-action="Delete">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

