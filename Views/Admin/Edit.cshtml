@model DigitalRetailers.Models.Laptop

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit Laptop Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="laptopId" />
            <div class="form-group">
                <label asp-for="laptopName" class="control-label"></label>
                <input asp-for="laptopName" class="form-control" />
                <span asp-validation-for="laptopName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="laptopPrice" class="control-label"></label>
                <input asp-for="laptopPrice" class="form-control" />
                <span asp-validation-for="laptopPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="laptopImageLink" class="control-label"></label>
                <input asp-for="laptopImageLink" class="form-control" />
                <span asp-validation-for="laptopImageLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

